  text-decoration: none;
}

.group p a:hover {
  color: {{ settings.global_hover_color }};
}

.slim img.images {
  margin-bottom: 8px;
}

#thumbs h3 span {
  color: {{ settings.global_text_font_color }};
}

#billing {
  margin-top: 20px;
}

.slim #password_confirmation, .slim #password {
  width: 130px;
}

.slim .form.full td.lbl {
  width: 140px;
}

#create-account form input {
  padding: 11px 13px;
  background-color: {{ settings.global_button_color }};
  color: {{ settings.global_button_font_color }};
  font-weight: 700;
  border-radius: 3px;
  border: none;
  outline: none;
  font-size: 14px;
  position: relative;
  -webkit-text-stroke: 0.1px;
  cursor: pointer;
  margin-bottom: 14px;
  -webkit-font-smoothing: antialiased;
}

#cost, #order-num { text-shadow: none !important }
.address-notification { color: black; }


.confirmation-page h2 {
    margin-bottom: 36px;
    padding: 0 0 15px;
    }

/*============================================================================
  Form Elements
==============================================================================*/
#content input[type=text],
#content input[type=number],
#content input[type=tel],
#content input[type=password],
#content input[type=email],
#content textarea,
#content select {
  -webkit-appearance: none;
     -moz-appearance: none;
          appearance: none;
  font-size: 14px;
  line-height: 1.6;
  max-width: 100%;
  width: 250px;
  background-color: transparent;
  color: {{ settings.input_text }};
  padding: 6px 10px;
  margin-bottom: 14px;
  border: 1px solid {{ settings.input_border }};
  border-radius: 4px;
}

#content input[type=text],
#content input[type=number],
#content input[type=tel],
#content input[type=password],
#content input[type=email],
#content input[type="number"],
#content select {
  height: 38px;
  line-height: normal;
}

#content select {
  background-image: url("data: image/svg+xml;base64,");
  background-repeat: no-repeat;
  background-position: right 10px center;
  padding: 6px 28px 6px 10px;
  width: auto;
  text-indent: 0.01px;
  text-overflow: '';
  cursor: pointer;
}



