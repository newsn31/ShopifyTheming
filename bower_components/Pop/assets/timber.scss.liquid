  line-height: em(24px);
  font-style: italic;
  margin: 0 0 $gutter;
  padding: ($gutter / 2) 0;

  p {
    margin-bottom: 0;

    & + cite {
      margin-top: $gutter / 2;
    }
  }

  cite {
    display: block;
    font-size: 0.75em;

    &:before {
      content: "\2014 \0020";
    }
  }

  @include at-query ($min, $large) {
    font-size: em(24px);
    line-height: em(30px);
    margin-left: -20%;
    width: 140%;
