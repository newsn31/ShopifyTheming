/*============================================================================
  #Site Header
==============================================================================*/
.site-header {
  background: {
    color: $colorMenu;
  }
  {% if settings.border_menu %}
    border-bottom: $borderWidth solid $colorBorder;
  {% endif %}
  height: $navHeaderSize;
  overflow-y: visible;
  font-family: $primaryFontStack;
  @include transition('left 0.5s cubic-bezier(0.75, 0.03, 0.52, 1)');

  .hr--small {
    border-color: color-control($colorMenu, 10%);
  }

  .supports-csstransforms & {
    @include transition('transform 0.5s cubic-bezier(0.75, 0.03, 0.52, 1)');
  }

  @include at-query ($min, $large) {
    {% if settings.border_menu %}
      border-right: $borderWidth solid $colorBorder;
      border-width: 0 $borderWidth 0 0;
    {% endif %}
    height: 100%;
    overflow-y: auto;
    left: 0;
    padding: ($gutter * 3) 0 0;
    position: fixed;
    width: $navSize;

    .hr--small {
      margin: ($gutter / 2) auto $gutter;
    }

    .grid {
      display: table;
      table-layout: fixed;
      width: 100%;

      & > .grid-item {
        float: none;
        display: table-cell;
        vertical-align: middle;
      }
    }
  }
}

.header-logo {
  text-align: center;
  font-size: em(24px);
  margin: 0 auto;
  word-wrap: break-word;
  line-height: 1;

  @include at-query ($min, $large) {
    margin-top: 5px;
    margin-bottom: $gutter * 2;
    font-size: em(32px);
    line-height: em(20px);
  }

  a, img {
    color: $colorMenuText;
    display: block;
  }

  img {
    margin: 0 auto;
    max-height: $navHeaderSize - $gutter;
    max-width: 100%;
    width: auto;
  }

  @include at-query ($min, $large) {
    img {
      max-height: none;
    }
  }
}

.site-header--text-links {
  margin-bottom: 0;
}

.search-bar {
  max-width: 100%;

  @include at-query ($max, $medium) {
    margin: 0 auto;
  }
}

/*============================================================================
  #Site Nav and Dropdowns
==============================================================================*/

.nav-bar {
  height: $navHeaderSize;

  .page-move--nav & {
    height: 100%;
  }

  .grid-item {
    height: 100%;
  }

  .icon {
    color: $colorMenuText;
  }

  .wrapper {
    padding: 0;
  }

  @include at-query ($min, $large) {
    .lt-ie9 & {
      margin-top: -$gutter;
    }
  }
}

.site-nav {
  cursor: default;
  font-size: em($menuFontSize);
  margin: 0;
  width: 100%;
  {% if settings.type_navigation_transform %}
    text-transform: uppercase;
  {% endif %}

  li {
    border-top: $borderWidth solid color-control($colorMenu, 10%);
    margin: 0;
  }

  li:first-child {
    border-top: 0;
  }

  li:last-child {
    border-bottom: $borderWidth solid color-control($colorMenu, 10%);
  }

  @include at-query ($min, $large) {
    text-align: center;

    li,
    li:last-child {
      border: 0;
    }
  }

  .grid-item {
    position: relative;
  }
}

@include at-query ($min, $large) {
  .lt-ie9 .site-nav {
    display: inline-table;

    ul {
      margin: 0;
    }

    li {
      border: 0;
      display: inline;
    }
  }
}

.site-nav__link {
  color: $colorMenuText;
  display: inline-block;
  font-weight: 300;
  padding: $gutter / 2;
  white-space: normal;
  max-width: 160px;
  width: 100%;

  &:active,
  &:hover,
  &:focus {
    color: lighten($colorMenuText, 10%);
  }

  .site-nav__child-link--active & {
    opacity: 1;
    color: color-control-text($colorMenuText, 25%);
  }

  @include transition('all 0.3s ease');

  @include at-query ($max, $medium) {
    min-width: 250px;

    &.site-nav__linknodrop {
      padding-left: $gutter / 2;
    }
  }

  @include at-query ($min, $large) {
    padding: 0 0 ($gutter / 2);

    &:active,
    &:hover,
    &:focus {
      @include transform('none');
    }
  }
}

.site-nav__linkdrop {
  @extend .site-nav__link;

  @include at-query ($max, $large) {
    width: auto;
    min-width: 0;
    padding-right: 0;
  }
}

.site-nav__linkdroparrow {
  @extend .site-nav__link;

  padding-left: $gutter / 2;
}

.site-nav__dropdown {
  background-color: color-control($colorMenu, 10%);
  display: none;

  a {
    text-transform: none;
    opacity: 0.7;
    max-width: 160px;
    white-space: normal;
  }

  li {
    border-top: 1px solid color-control($colorMenu, 20%);
  }

  li:first-child {
    border-top: 1px solid color-control($colorMenu, 20%);
  }

  li:last-child {
    border-bottom: 0;
  }

  .site-nav--open-dropdown & {
    display: block;
  }

  @include at-query ($max, $large) {
    margin: 0;
  }

  @include at-query ($min, $large) {
    margin: -10px 0 30px;
    background-color: transparent;

    a {
      padding: 0;
    }

    li,
    li:first-child {
      border: 0;
    }
  }
}

.site-nav--active,
.site-nav--active a {
  opacity: 1;
  color: color-control-text($colorMenuText, 25%);
}

.site-nav__dropdown-toggle {
  font-size: em(17px);
  float: right;
  background-color: transparent;

  &:hover {
    background-color: transparent;
  }

  @include at-query($min, $large) {
    display: inline-block;
    float: none;
    padding: 0;
    position: absolute;
    bottom: calc(50% - 6px);
    width: auto;
  }

  @include at-query ($max, $large) {
    padding-top: 20px;
    padding-bottom: 12px;
    position: absolute;
  }
}

.site-nav__label {
  @include at-query ($min, $large) {
    display: inline-block;
    padding: 0 0 $gutter / 2;
    width: auto;
    white-space: normal;
    max-width: 130px;
  }
}

.site-nav__dropdown-icon--close {
  display: none;
}

.site-nav--open-dropdown {
  .site-nav__dropdown-icon--close {
    display: inline-block;
  }

  .site-nav__dropdown-icon--open {
    display: none;
  }
}

/*================ Mobile Nav ================*/

.cart-toggle,
.nav-toggle {
  color: $colorMenuText;
  display: inline-block;
  height: $navHeaderSize;
  font-size: $baseFontSize;
  text-align: center;
  width: 100%;

  &:active,
  &:hover,
  &:focus {
    color: lighten($colorMenuText, 10%);
  }
}

@include at-query ($min, $large) {
  .cart-toggle {
    height: auto;
    margin: 0;
    width: auto;
  }
}

.hidden-count {
  display: none;
}

.nav-mobile {
  position: absolute;
  background-color: $colorMenu;
  font-family: $primaryFontStack;
  height: 100%;
  top: 0;
  left: 0;
  height: 100%;
  font-family: $primaryFontStack;
  width: $navSize;
  z-index: 0;
  overflow: hidden;
  @include transition('left 0.5s cubic-bezier(0.75, 0.03, 0.52, 1)');

  .supports-csstransforms & {
    @include transition('all 0.5s cubic-bezier(0.75, 0.03, 0.52, 1)');
  }

  @include at-query ($min, $large) {
    display: none;
  }

  .page-move--nav {
    position:absolute
  }

  .mobile-drawer--open & {
    overflow: auto;
    -webkit-overflow-scrolling: touch;
  }
}

.page-wrapper {
  background-color: $colorBody;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100%;
  z-index: 2;

  .page-move--nav &,
  .page-move--cart & {
    overflow: hidden;
  }

  .mobile-drawer--open & {
    position: static;
  }

  @include transition('left 0.5s cubic-bezier(0.75, 0.03, 0.52, 1)');

  .supports-csstransforms & {
    @include transition('all 0.5s cubic-bezier(0.75, 0.03, 0.52, 1)');
  }
}

/*============================================================================
  #Drawers
==============================================================================*/
.page-move--nav,
.page-move--cart,
.page-move--toggled {
  overflow: hidden;
}

.page-wrapper {
  .page-move--nav & {
    box-shadow: 0 -15px 15px darken($colorMenu, 20%);
    left: $navSize;

    .supports-csstransforms & {
      left: 0;
      @include transform(translateX($navSize));
    }
  }

  .page-move--cart & {
    box-shadow: 0 -15px 15px darken($colorMenu, 20%);
    left: -$cartWidthSmall;

    @include at-query($min, $large) {
      left: -$cartWidthLarge;
    }

    .supports-csstransforms & {
      left: 0;
      @include transform(translateX(-$cartWidthSmall));

      @include at-query($min, $large) {
        @include transform(translateX(-$cartWidthLarge));
      }
    }
  }
}

/*================ Move individual elements ================*/
.page-move--nav {
  .ajaxify-drawer {
    right: -$navSize;

    .supports-csstransforms & {
      right: 0;
      @include transform(translateX($navSize));
    }
  }
}

.page-move--cart {
  @include at-query($min, $large) {
    .site-header {
      left: -100%;

      .supports-csstransforms & {
        left: 0;
        @include transform(translateX(-100%));
      }
    }
  }

  .nav-mobile {
    left: -$cartWidthSmall;

    @include at-query($min, $large) {
      left: -$cartWidthLarge;
    }

    .supports-csstransforms & {
      left: 0;
      @include transform(translateX(-$cartWidthSmall));

      @include at-query($min, $large) {
        @include transform(translateX(-$cartWidthLarge));
      }
    }
  }
}

/*================ Search bar =================*/

.nav-search {
  @include at-query ($max, $medium) {
    margin: 0 0 ($gutter / 2);
  }
}

/*================ Secondary nav ================*/

.nav-secondary {
  font-family: $primaryFontStack;
  font-size: em(12px);
  margin: 0 0 ($gutter / 2);
  {% if settings.type_navigation_transform %}
    text-transform: uppercase;
  {% endif %}

  a {
    color: $colorFooterLink;

    &:hover {
      color: lighten($colorFooterLink, 20%);
    }
  }

  li {
    margin: 0 0 0 ($gutter / 2);
  }

  li:first-child {
    margin: 0;
  }
}

/*================ Page nav ====================*/

.article-pagination,
.product-pagination {
  border: $borderWidth solid $colorBorder;
  border-width: $borderWidth 0;
  font-family: $primaryFontStack;
  font-size: em(12px);
  margin: $gutter 0;
  padding: $gutter 0;
  {% if settings.type_navigation_transform %}
    text-transform: uppercase;
  {% endif %}

  &.last {
    border-bottom: 0;
    padding-bottom: 0;
  }

  p {
    margin: 0;
  }

  .article-pagination__sep,
  .product-pagination__sep {
    padding: 0 ($gutter / 4);
  }

  @include at-query ($min, $large) {
    margin: ($gutter * 2) 0;
  }
}

/*============================================================================
  #Site Footer
==============================================================================*/
.site-footer {
  {% if settings.border_footer %}
    border-top: $borderWidth solid $colorBorder;
    margin-top: $gutter / 2;
  {% endif %}

  background-color: $colorBody;
  padding: 0 0 $gutter;
  color: $colorTextBody;

  @include at-query ($min, $large) {
    {% if settings.border_footer %}
      margin-top: $gutter * 2;
    {% endif %}
    padding: ($gutter * 2) 0;
  }

  @include at-query ($max, $large) {
    small {
      display: block;
      padding-top: 30px;
    }
  }

  a {
    color: $colorFooterLink;
  }

  hr {
    border-color: $colorBorder;
  }

  input[type="text"],
  input[type="search"],
  input[type="password"],
  input[type="email"],
  input[type="file"],
  input[type="number"],
  input[type="tel"],
  textarea,
  select {
    border-color: $colorBorder;
    color: $colorTextBody;
  }

  .input-group {
    border-color: $colorBorder;

    .icon {
      color: $colorTextBody;
    }
  }

  .onboarding-header {
    margin-bottom: 15px;
  }

  .rte {
    h1, h2, h3, h4, h5, h6 {
      text-align: left;

      @include at-query ($max, $large) {
        text-align: center;
      }
    }

    ul, ol {
      @include at-query ($max, $large) {
        margin-left: 0;
        list-style-position: inside;
      }
    }
  }
}

/*============================================================================
  #Product Grid and List Views
==============================================================================*/

.product {
  display: block;
  margin-bottom: $gutter;

  @include at-query($min, $large) {
    position: relative;
  }
}

.product-wrapper {
  position: relative;
}

/*================ This hacks all the grid-items in IE8 and below ================*/

.lt-ie9 {
  .product-grid {
    .grid-item {
      display: inline-block;
      float: none;
      margin-bottom: $gutter;
      margin-left: -3px;
      padding: 0;

      .product {
        margin-bottom: 0;
      }
    }
  }

  .product-wrapper {
    margin: 0 ($gridGutter / 2);
  }
}

.product:hover {
  @include at-query($min, $large) {
    .product__cover,
    .product__details {
      opacity: 1;
    }

    .product__cover,
    .product__img {
      @include transform('scale(1.03, 1.03)');

      /*================ Remove hover in IE8 and below ================*/
      .lt-ie9 & {
        @include transform('none');
      }
    }
  }
}

.product__img {
  display: block;
  margin: 0 auto;

  @include at-query($min, $large) {
    position: relative;

    @include transition('all 0.5s');
    @include backface();
  }
}

{% if settings.product_details_display_method == 'hover' %}
  .product__cover,
  .product__details {
    @include at-query($min, $large) {
      height: 100%;
      left: 0;
      opacity: 0;
      position: absolute;
      top: 0;
      width: 100%;
      z-index: 1;

      /*================ Remove hover in IE8 and below ================*/
      .lt-ie9 & {
        height: auto;
        position: relative;
        opacity: 1;
        width: auto;
      }
    }
  }
{% endif %}

.product__details {
  @include transition('opacity 0.75s');

  @include at-query($min, $large) {
    {% if settings.product_details_display_method == 'always' %}
      margin-top: $gutter / 2;
    {% endif %}

    z-index: 2;
  }
}

.product__cover {
  @include transition('all 0.5s');

  @include at-query($min, $large) {
    background-color: rgba($colorProductHover,0.9);
  }

  .lt-ie9 .product__cover {
    display: none;
  }
}

.product__price {
  font-size: $baseFontSize;

  {% if settings.product_details_display_method == 'always' %}
    margin-bottom: 0;

    @include at-query($min, $large) {

      .product:hover & {
        color: $colorAccent;
      }
    }
  {% endif %}
}

.product__title {
  font-size: em(17px);
  margin: ($gutter / 2) 0 0 0;
  line-height: 1.5;

  @include at-query (null, $small, $large) {
    .large--one-quarter & {
