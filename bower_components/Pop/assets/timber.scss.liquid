/*============================================================================
  Ajaxify.scss.liquid overrides
  - Make the drawer come from the right
==============================================================================*/
.ajaxify-drawer {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  font-family: $secondaryFontStack;
  width: $cartWidthSmall;
  overflow: hidden;
  @include transition('right 0.5s cubic-bezier(0.75, 0.03, 0.52, 1)');

  @include at-query($min, $large) {
    width: $cartWidthLarge;
  }

  .ajaxifyCart--content {
    background-color: transparent;
    opacity: 1;
    @include transition(none);
    @include transform(none);
  }

  .supports-csstransforms & {
    @include transition('transform 0.5s cubic-bezier(0.75, 0.03, 0.52, 1)');
  }

  .page-move--cart &,
  .page-move--nav & {
    position:fixed;
    overflow: auto;
  }
}

/*================ Ajaxify color overrides ================*/
.ajaxify-drawer {
  color: $colorMenuText;

