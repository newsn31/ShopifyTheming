  <header class="section-header text-center">
    <h1 class="section-header__title">{{ collection.title }}</h1>
    {% if collection.description != blank or settings.collection_tags_enable or settings.collection_sort_enable %}
      <hr class="hr--small">
    {% endif %}
    {% if collection.description != blank %}
      <div class="rte rte--header">
        {{ collection.description }}
      </div>
    {% endif %}
    {% if settings.collection_tags_enable or settings.collection_sort_enable %}
      <div class="grid--full collection-sorting{% if settings.collection_tags_enable %} collection-tags--enabled{% endif %}{% if settings.collection_sort_enable %} collection-sorting--enabled{% endif %}">
        {% if settings.collection_tags_enable %}
          {% include 'collection-tags' %}
        {% endif %}
        {% if settings.collection_sort_enable %}
          {% include 'collection-sorting' %}
        {% endif %}
      </div>
    {% endif %}
  </header>
