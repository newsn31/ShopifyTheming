{% unless settings.home_page_content == blank or pages[settings.home_page_content].empty? %}
<div class="grid">
  <div class="grid-item large--two-thirds push--large--one-sixth">
    <h2 class="text-center">{{ pages[settings.home_page_content].title }}</h2>
    <hr class="hr--small">
    <div class="rte text-center">
      {{ pages[settings.home_page_content].content }}
    </div>
  </div>
</div>
{% endunless %}